  name = "libtflm",
  srcs = glob(["machina/**/*.cc", "machina/**/*.c", "third_party/**/*.cc", "third_party/**/*.c"]),
  hdrs = glob(["machina/**/*.h", "third_party/**/*.h"]),
  copts = tflm_copts() + [
    "-Ithird_party/gemmlowp",
    "-Ithird_party/flatbuffers/include",
    "-Ithird_party/kissfft",
    "-Ithird_party/kissfft/tools",
    "-Ithird_party/ruy",
  ]
)

